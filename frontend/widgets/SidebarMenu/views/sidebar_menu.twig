<ul>
    {% for category in model['roots'] %}
        <li><a href="/{{ catalog }}/{{ category.alias }}">{{ category.name }}</a>
            {% if model['in'][category.id] %}
                <ul>
                    {% for subCategory in model['in'][category.id] %}
                        <li>
                            <a href="/{{catalog }}/{{ category.alias }}/{{ subCategory.alias }}">
                                {{ subCategory.name }}
                            </a>
                            {% if model['in'][subCategory.id] %}
                                <ul>
                                    {% for subSubCategory in model['in'][subCategory.id] %}
                                        <li>
                                            <a href="/{{ catalog }}/{{ category.alias }}/{{ subCategory.alias }}/{{ subSubCategory.alias }}">
                                                {{ subSubCategory.name }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul>
