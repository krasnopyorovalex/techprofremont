{% set form = active_form_begin({
    'action': path('/send/order'),
    'options': {
        'class': 'form__order'
    }
}) %}

    <div class="form__order-title">Быстрая заявка на ремонт</div>
    <div class="form__order-subtitle">Опишите поломку, мы передадим ваши данные в специализированные сервисные центры и менеджеры свяжутся в вами.</div>

    {{ form.field(modelForm, 'name', {'options': {'class': 'form-group name'}}).textInput({'placeholder': 'Ваше имя*'}).label(false)| raw }}
    {{ form.field(modelForm, 'phone', {'options': {'class': 'form-group phone'}}).textInput({'placeholder': 'Телефон*'}).label(false)| raw }}

    {{ form.field(modelForm, 'info', {'options': {'class': 'form-group message'}}).textarea({'placeholder': 'Опишите поломку'}).label(false)| raw }}

    {{ form.field(modelForm, 'agree', {'options': {'class': 'form-group checked'}}).checkbox().error(false)| raw }}
    {{ html.submitButton('Отправить запрос', {'class': 'form__order-btn btn__hover'})| raw }}

{{ active_form_end() }}