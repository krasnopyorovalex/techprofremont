{{ set(this, 'title', model.name) }}

<div class="wrapper">
    <div class="breadcrumbs">
        <ul>
            <li><a href="{{ app.homeUrl }}">{{ app.params['breadcrumbs_main_name'] }}</a></li>
            <li>{{ model.name }}</li>
        </ul>
    </div>
    <!-- /.breadcrumbs -->
</div>

<section class="content">
    <div class="wrapper">
        <div class="items">
            <div class="content__sidebar">
                {{ use('frontend/widgets/SidebarMenu/SidebarMenu') }}
                {{ sidebar_menu_widget() }}
            </div>
            <!-- /.content__sidebar -->
            <div class="content__body">
                <h1>{{ model.name }}</h1>

                <div class="items cat__details">
                    {% for item in model.catalogCategories %}
                        <div class="item">
                            <div class="item__cat">
                                <img src="/userfiles/categories/{{ item.image }}" alt="">
                                <div class="item__cat-name">
                                    <a href="/{{ model.alias }}/{{ item.alias }}">{{ item.name }}</a>
                                </div>
                            </div>
                            <!-- /.item_cat -->
                        </div>
                        <!-- /.item -->
                    {% endfor %}
                </div>
                <!-- /.items -->

                <div class="text">
                    {{ model.text| raw }}
                </div>

                {{ use('frontend/widgets/FormOrder/FormOrder') }}
                {{ form_order_widget() }}

            </div>
            <!-- /.content__body -->
        </div>
        <!-- /.items -->
    </div>
</section>
<!-- /.content -->